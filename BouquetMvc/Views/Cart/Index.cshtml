@model BouquetMvc.Models.CartViewModel

<div class="text-center">
    <section class="pt-5 pb-5">
        <div class="container">
            <div class="row w-100">
                <div class="col-lg-12 col-md-12 col-12">
                    <h3 class="display-5 mb-2 text-center">Shopping Cart</h3>
                    <p class="mb-5 text-center">
                        <i class="text-info font-weight-bold">@Model.Size()</i> items in your cart</p>
                    <table id="shoppingCart" class="table table-condensed table-responsive">
                        <thead>
                            <tr>
                                <th style="width:60%">Bouquet</th>
                                <th style="width:12%">Price</th>
                                <th style="width:16%"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var bouquet in Model.items)
                            {
                                <tr>
                                    <td data-th="Product">
                                        <div class="row">
                                            <div class="col-md-3 text-left">
                                                <img src="@bouquet.PictureUrl" alt=""
                                                    class="img-fluid d-none d-md-block rounded mb-2 shadow ">
                                            </div>
                                            <div class="col-md-9 text-left mt-sm-2">
                                                <h4>@bouquet.Name</h4>
                                                <p class="font-weight-light">@bouquet.Description</p>
                                            </div>
                                        </div>
                                    </td>
                                    <td data-th="Price">$@bouquet.Price</td>
                                    <td class="actions" data-th="">
                                        <div class="text-right">
                                            <form asp-controller="Cart" asp-action="RemoveBouquet">
                                                <div class="form-group">
                                                    <input type="hidden" name="bouquetId" value="@bouquet.Id.ToString()" />
                                                </div>
                                                <button type="submit" class="btn btn-success">Remove</button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="float-right text-right">
                        <h4>Total:</h4>
                        <h1>$@string.Format("{0:0.00}", Model.GetTotalPrice())</h1>
                    </div>
                </div>
            </div>
            <div class="row mt-4 d-flex align-items-center">
                @if (!Model.IsEmpty())
                {
                    <div class="col-sm-6 order-md-2 text-right">
                        <form asp-controller="Order" asp-action="PlaceOrder">
                            <button type="submit" class="btn btn-success">Place Order</button>
                        </form>
                    </div>
                }
                <div class="col-sm-6 mb-3 mb-m-1 order-md-1 text-md-left">
                    <a asp-action="Index" asp-controller="Home">
                        <i class="fas fa-arrow-left mr-2"></i> Continue Shopping</a>
                </div>
            </div>
        </div>
    </section>
</div>